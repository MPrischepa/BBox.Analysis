<?xml version="1.0" encoding="utf-8"?>

<configuration>
  <configSections>
    <section name="fileManagerConfiguration" type="GasStationReports.FileManager.Configuration.FileManagerConfiguration, GasStationReports.FileManager.Configuration, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null"/>
  </configSections>
    <startup> 
        
    <supportedRuntime version="v2.0.50727"/></startup>
  <fileManagerConfiguration xmlns="urn:GasStationReports.FileManager.Configuration">
    <archiveFilePattern value="out*.zip"/>
    <outputDirectory value="d:\Prise\Tmp\Output"/>
    <inputDirectories baseDirectory="d:\Prise\Tmp">
      <inputDirectory directory="01"/>
      <inputDirectory directory="37"/>
    </inputDirectories>
    <replacementTextTemplates>
      <replacementTemplateElement>
        <index ind="0"/>
        <templateDescription value="Форматируем дату"/>
        <searchPattern value="(\d{2}).(\d{2}).(\d{4})\s(\d{1,2}):(\d{2}):(\d{2})"/>
        <replacementPattern value="$3-$2-$1 $4:$5:$6"/>
      </replacementTemplateElement>
    <replacementTemplateElement>
      <index ind="1"/>
      <templateDescription value="Форматируем часы 2 знака"/>
      <searchPattern value="(\d{4}-\d{2}-\d{2})\s(\d{1}):(\d{2}:\d{2})"/>
      <replacementPattern value="$1 0$2:$3"/>
    </replacementTemplateElement>
    </replacementTextTemplates>
    <removeFiles>
      <removeFile fillePattern="*.zip"/>
      <removeFile fillePattern="*.crc"/>
      <removeFile fillePattern="*.frp"/>
      <removeFile fillePattern="*.xml"/>
    </removeFiles>
  </fileManagerConfiguration>
</configuration>
